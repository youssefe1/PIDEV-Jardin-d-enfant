@model IEnumerable<WE_MANAGE_ConsumeWebApi.Models.Notification>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<style>
    .btn {
        background-color: DodgerBlue;
        border: none;
        color: white;
        padding: 12px 16px;
        font-size: 16px;
        cursor: pointer;
    }

        /* Darker background on mouse-over */
        .btn:hover {
            background-color: RoyalBlue;
        }
</style>
<br />
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.createdAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.notifType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.seen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user.firstName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.createdAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.link)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.notifType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.user.firstName)
            </td>
            <td>
                <a class="btn" href="@Url.Action("Edit",new { id = item.Id })">
                    <i class="fa fa-pencil"></i>
                </a>
                <a class="btn" href="@Url.Action("Details",new { id = item.Id })">
                    <i class="fa fa-eye"></i>
                </a>
                <a class="btn" href="@Url.Action("Delete",new { id = item.Id })">
                    <i class="fa fa-trash"></i>
                </a>

            </td>
        </tr>


    }
<td>
    <a class="btn" href="/Notification/Create">
        <i class="fa fa-plus"></i>


    </a>
    <a class="btn" href="/Notification/Call">
        <i class="fa fa-phone"></i>


    </a>
</td>
</table>
@section Mysection{
    <li class="nav-item">
        <a class="search-toggle iq-waves-effect">
            <div id="lottie-beil"></div>
            <span class="bg-danger dots"></span>
        </a>




        <div class="iq-sub-dropdown">
            <div class="iq-card shadow-none m-0">
                <div class="iq-card-body p-0 ">
                    <div class="bg-primary p-3">
                        <h5 class="mb-0 text-white" name="demandes">All Notifications<small class="badge  badge-light float-right pt-1">@ViewBag.N1</small></h5>
                    </div>




                    @foreach (var item in Model)
                    {





                        <a href="#" class="iq-sub-card">
                            <div class="media align-items-center">
                                <div class="">
                                    <img class="avatar-40 rounded" src="../Content/images/user/01.jpg" alt="">
                                </div>
                                <div class="media-body ml-3">
                                    <h6 class="mb-0 ">Emma Watson Bni</h6>
                                    <small class="float-right font-size-12">
                                        @Html.DisplayFor(modelItem => item.createdAt)
                                    </small>
                                    <p class="mb-0">
                                        @Html.DisplayFor(modelItem => item.body)
                                    </p>
                                    <p class="mb-0">
                                        @Html.DisplayFor(modelItem => item.link)
                                    </p>
                                </div>
                            </div>
                        </a>

                    }

                </div>
            </div>
        </div>

    </li>

}