@model WE_MANAGE_ConsumeWebApi.Models.Event

@{
    ViewBag.Title = "Delete";
}

<style>
    .container {
        margin-top: 100px !important;
    }

    .btn-outline-info {
        color: #0094ff !important;
        border-color: #0094ff !important;
    }
    .dt {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 18px;
        font-style: italic;
            color:azure;
    }

</style>
<h2>Delete Event</h2>

<h3 style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;font-size:24px;color:#fff">Are you sure you want to delete this Event ?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
        
                Title
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            
                Description
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
           
             Photo 
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.photo)
        </dd>

        <dt>
            
                Price
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fee_supp)
        </dd>

        <dt>
            
                Participants number
           
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nbrParticipants)
        </dd>

        <dt>
           
             Invitations number
            
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nbrInvites)
        </dd>

        <dt>
           
                Event Date
           
        </dt>

        <dd>
            @Html.DisplayFor(model => model.eventDate)
        </dd>

        <dt>
            
                Event Start Time
           
        </dt>

        <dd>
            @Html.DisplayFor(model => model.eventStartDate)
        </dd>

        <dt >
            Event Start End
           
        </dt>

        <dd>
            @Html.DisplayFor(model => model.eventEndDate)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

<div class="form-actions no-color">
    <input type="submit" value="Delete" class=" btn btn-outline-info" style="border-radius: 24px!important" />
    @Html.ActionLink("Back to List", "DisplayClientEvents")
</div>
    }
</div>
