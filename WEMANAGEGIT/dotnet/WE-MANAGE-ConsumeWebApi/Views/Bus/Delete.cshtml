@model WE_MANAGE_ConsumeWebApi.Models.Bus

@{
    ViewBag.Title = "Delete";
}

<style>
    .container {
        margin-top: 100px !important;
    }

    .btn-outline-info {
        color: #0094ff !important;
        border-color: #0094ff !important;
    }

    .dt {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 18px;
        font-style: italic;
        color: azure;
    }
</style>

<h2>Delete Bus</h2>

<h3>Are you sure you want to delete this Bus?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Drive 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.driver)
        </dd>

        <dt>
           Seat Capacity
        </dt>

        <dd>
            @Html.DisplayFor(model => model.seatCapacity)
        </dd>

        <dt>
            Lattitude of start
        </dt>

        <dd>
            @Html.DisplayFor(model => model.latStart)
        </dd>

        <dt>
            Longitude of start
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lonStart)
        </dd>

        <dt>
           Lattitude of Arrival
        </dt>

        <dd>
            @Html.DisplayFor(model => model.latArrival)
        </dd>

        <dt>
           Longitude of Arrival
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lonArrival)
        </dd>

        <dt>
           Rate 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.rate)
        </dd>

        <dt>
           Trajet
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trajet)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class=" btn btn-outline-info" style="border-radius: 24px!important" />
            @Html.ActionLink("Back to List", "Buses")
        </div>
    }
</div>
